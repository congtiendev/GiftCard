<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <!--Phân quyền cho menu Mageplaza-->
                <resource id="Mageplaza_GiftCard::mageplaza" title="Mageplaza" sortOrder="50">

                    <resource id="Mageplaza_GiftCard::giftcard_title" title="Gift Card" sortOrder="9">
                        <!--                        Menu                            -->
                        <resource id="Mageplaza_GiftCard::giftcard" title="Gift Card Title" sortOrder="9"/>
                        <resource id="Mageplaza_GiftCard::giftcard_code" title="Manage Codes" sortOrder="8"/>
                        <resource id="Mageplaza_GiftCard::giftcard_config" title="Configuration" sortOrder="7"/>
                        <resource id="Mageplaza_GiftCard::giftcard_crud" title="TEST CRUD" sortOrder="6"/>

                        <!--                        Action-->
                        <resource id="Mageplaza_GiftCard::giftcard_new" title="New Action" sortOrder="5"/>
                        <resource id="Mageplaza_GiftCard::giftcard_index" title="Index Action" sortOrder="4"/>
                        <resource id="Mageplaza_GiftCard::giftcard_delete" title="Delete Gift Card" sortOrder="3"/>
                        <resource id="Mageplaza_GiftCard::giftcard_massdelete" title="Mass Delete Gift Card"
                                  sortOrder="3"/>
                        <resource id="Mageplaza_GiftCard::giftcard_edit" title="Edit Gift Card" sortOrder="2"/>
                        <resource id="Mageplaza_GiftCard::giftcard_save" title="Save Gift Card" sortOrder="1"/>
                    </resource>
                </resource>

                <!--Phân quyền cho menu trong Stores > Configuration-->
                <resource id="Magento_Backend::stores" title="Stores">
                    <resource id="Magento_Backend::stores_settings" title="Settings">
                        <resource id="Magento_Config::config" title="Configuration">
                            <resource id="Mageplaza_GiftCard::giftcard_configuration" title="Gift Card Configuration"
                                      sortOrder="9"/>
                        </resource>
                    </resource>
                </resource>

            </resource>
        </resources>
    </acl>
</config>
